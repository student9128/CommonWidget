<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="HexagonProgressBar">
        <attr name="hexagonColor" format="color" />
        <attr name="hexagonProgressColor" format="color" />
        <attr name="hexagonWidth" format="dimension" />
        <attr name="textColor" />
        <attr name="textSize" />
        <attr name="textIsDisplayable" format="boolean" />
        <attr name="contentColor" format="color" />
        <attr name="text" format="string" />
        <attr name="progress" />
    </declare-styleable>
    <declare-styleable name="ToggleView">
        <attr name="toggleColor" format="color" />
        <attr name="toggleCheckedColor" format="color" />
        <attr name="toggleUnCheckedColor" format="color" />
        <attr name="toggleChecked" format="boolean" />
        <attr name="toggleBorderWidth" format="dimension" />
        <attr name="toggleShadow" format="boolean" />
        <attr name="toggleShowText" format="boolean" />
        <attr name="toggleCheckedText" format="string" />
        <attr name="toggleUnCheckedText" format="string" />
        <attr name="toggleCheckedTextColor" format="color|reference" />
        <attr name="toggleUnCheckedTextColor" format="color|reference" />
        <attr name="toggleType">
            <enum name="rectangle" value="100" />
            <enum name="circle" value="101" />
            <enum name="circleWithThin" value="102" />
            <enum name="circleWithThinner" value="103" />
            <enum name="circleWithThinnest" value="104" />
            <enum name="circleWithConcentric" value="105" />
        </attr>
    </declare-styleable>

    <declare-styleable name="ReverseProgressBar">
        <!--第一层背景颜色-->
        <attr name="progressBgColor" format="color" />
        <!--第一层文字颜色-->
        <attr name="progressBgTextColor" format="color" />
        <!--第二层背景颜色-->
        <attr name="progressScColor" format="color" />
        <!--第二层文字颜色-->
        <attr name="progressScTextColor" format="color" />
        <!--进度-->
        <attr name="progressX" format="float" />
        <!--圆角半径-->
        <attr name="radiusX" format="dimension" />
        <!--字体大小-->
        <attr name="contentTextSize" format="dimension" />
    </declare-styleable>
    <declare-styleable name="ProgressTextView">
        <attr name="backgroundTextColor" format="color" />
        <attr name="foregroundTextColor" format="color" />
    </declare-styleable>
    <declare-styleable name="ProgressWaveView">
        <attr name="waveColor" />
        <attr name="backgroundColor" />
        <attr name="pwTextSize" format="dimension" />
        <attr name="pwTextColor" format="color|reference" />
        <attr name="cProgress" format="integer" />
        <attr name="totalValue" format="float" />
        <attr name="currentValue" format="float" />
    </declare-styleable>
    <!-- 通用属性 start-->
    <attr name="backgroundColor" format="color" />
    <attr name="textSize" format="dimension" />
    <attr name="textColor" format="color" />
    <attr name="waveColor" format="color" />
    <attr name="duration" format="integer" />
    <attr name="progress" format="integer" />
    <attr name="showProgressText" format="boolean" />
    <attr name="autoAnim" format="boolean" />
    <!-- 通用属性 end-->
    <declare-styleable name="CircleWaveView">
        <attr name="autoAnim"/>
        <attr name="waveColor" />
        <attr name="backgroundColor" />
        <attr name="circleStrokeWidth" format="dimension" />
        <attr name="textSize" />
        <attr name="textColor" />
        <attr name="waveDuration" format="integer" />
        <attr name="progressDuration" format="integer" />
        <attr name="waveCount" format="integer" />
        <attr name="progress" />
        <attr name="showProgressText" />
        <attr name="showStroke" format="boolean" />
        <attr name="circleType">
            <enum name="fill" value="100" />
            <enum name="stroke" value="101" />
        </attr>
        <attr name="waveType" format="enum">
            <enum name="single" value="1000" />
            <enum name="dual" value="1001" />
        </attr>
        <attr name="waveColorSecond" format="color" />
    </declare-styleable>
    <declare-styleable name="WaveXView">
        <attr name="waveWaterLevel" format="float" />
        <attr name="amplitudeRatio" format="float" />
        <attr name="waveLengthRatio" format="float" />
        <attr name="waveShiftRatio" format="float" />
        <attr name="frontWaveColor" format="color" />
        <attr name="behindWaveColor" format="color" />
        <attr name="waveXShape" format="enum">
            <enum name="circle" value="0" />
            <enum name="square" value="1" />
        </attr>
        <attr name="showWave" format="boolean" />
    </declare-styleable>
</resources>